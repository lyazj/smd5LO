#!/bin/bash
#
# split-run - Split Delphes events into ${NEVT} events per ROOT file.

NEVT=10000

mkdir -p split
SPLIT=$(readlink -f ../../bin/delphes-split)
for SRCDIR in $(./list-run 2>/dev/null | awk '{print $1}'); do
    DSTDIR=split${SRCDIR:3}
    SRCDIR=$(readlink -f ${SRCDIR})
    mkdir -p ${DSTDIR}
    pushd ${DSTDIR}
    ${SPLIT} ${SRCDIR}/Events/run_01/tag_1_delphes_events.root ${NEVT}
    popd
done
